// -*- mode: jsonc -*-
{
    "layer": "top",
    "position": "right",

    "margin-top": 4,
    "margin-bottom": 4,
    "margin-left": 4,
    "width": 40,

    "modules-left": [
        "group/power",
        "custom/playpause",
        "niri/workspaces"
    ],

    "modules-center": [
        "niri/window"
    ],

    "modules-right": [
        "network",
	"custom/bluetooth",
        "group/apps",
        "group/stats",
        "clock"
    ],

    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%d\n%m\n%y}",
        "format": "{:%H\n%M}",
        "interval": 60
    },

    /* ================= */
    /* PipeWire Audio   */
    /* ================= */

    "pipewire": {
        "format": "{volume}\n{icon}",
        "format-muted": "MUT\n󰝟",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "tooltip": false,
        "justify": "center",
        "reverse-scrolling": true
    },

    "pipewire/slider": {
        "min": 0,
        "max": 100,
        "orientation": "vertical"
    },

    "group/audio": {
        "modules": [
            "wireplumber"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true
        }
    },

    /* ================= */
    /* Brightness       */
    /* ================= */

    "backlight": {
        "format": "{percent}\n{icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""],
        "tooltip": false,
        "justify": "center",
        "reverse-scrolling": true
    },

    "backlight/slider": {
        "min": 3,
        "max": 100,
        "orientation": "vertical"
    },

    "group/brightness": {
        "modules": [
            "backlight",
            "backlight/slider"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true
        }
    },

    /* ================= */
    /* Battery + Stats  */
    /* ================= */

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}\n{icon}",
        "format-full": "{capacity}\n{icon}",
        "format-charging": "{capacity}\n",
        "format-plugged": "{capacity}\n",
        "tooltip-format": "{power} W, {timeTo}",
        "format-icons": ["", "", "", "", ""],
        "justify": "center"
    },

    "group/stats": {
        "modules": [
            "battery",
            "group/audio",
            "group/brightness"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 750,
            "transition-left-to-right": false
        }
    },

    /* ================= */
    /* niri             */
    /* ================= */

    "niri/window": {
        "tooltip": false,
        "format": "{}",
        "rotate": 270,
        "rewrite": {
            "^null$": "Desktop"
        }
    },

    "custom/appmenu": {
        "format": "󰀻",
        "on-click": "niri msg action toggle-overview",
        "tooltip": false
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "on-click": "activate",
        "on-click-right": "close"
    },

    "group/apps": {
        "modules": [
            "custom/appmenu",
            "wlr/taskbar"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": false
        }
    },

    /* ================= */
    /* Network          */
    /* ================= */

    "network": {
        "format-wifi": " ",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format": "{essid}: {ipaddr}",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}: {essid}",
        "rotate": 270
    },

    /* Bluetooth */
    "custom/bluetooth": {
	    "format": "",
	    "tooltip": "Bluetooth",
	    "on-click": "blueman-manager",
	    "interval": 60,
	    "exec": "bluetoothctl show | grep -q 'Powered: yes' && echo '' || echo '󰂲'"
    }

    /* ================= */
    /* Power Group      */
    /* ================= */

    "group/power": {
        "modules": [
            "custom/powerbutton",
            "custom/reboot",
            "custom/suspend",
            "custom/lock",
            "custom/idlekiller",
            "user"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500
        }
    },

    "custom/powerbutton": {
        "format": "⏻",
        "on-click": "poweroff",
        "tooltip-format": "Power Off"
    },

    "custom/reboot": {
        "format": "󰜉",
        "on-click": "reboot",
        "tooltip-format": "Reboot"
    },

    "custom/suspend": {
        "format": "",
        "on-click": "systemctl suspend",
        "tooltip-format": "Suspend"
    },

    "custom/lock": {
        "format": "󰍁",
        "on-click": "niri msg action lock-session",
        "tooltip-format": "Lock"
    },

    "custom/idlekiller": {
        "format": "",
        "on-click": "niri msg action toggle-inhibit-idle",
        "tooltip-format": "Inhibit Idle"
    },

    "user": {
        "format": "{work_H}:{work_M}:{work_S} ↑",
        "interval": 60,
        "rotate": 270
    },

    /* ================= */
    /* Media / Extras   */
    /* ================= */

    "custom/playpause": {
        "format": "󰐎",
        "on-click": "playerctl play-pause",
        "tooltip": false
    },
}

